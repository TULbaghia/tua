    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <context-param>
        <param-name>accountConfirmationCodeExpirationTime</param-name>
        <param-value>24</param-value>
    </context-param>


    <default-context-path>/</default-context-path>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>

    <context-param>
        <param-name>emailChangeCodeExpirationTime</param-name>
        <param-value>2</param-value>
    </context-param>

    <context-param>
        <param-name>emailChangeCodeRepeatTime</param-name>
        <param-value>1</param-value>
    </context-param>

    <context-param>
        <param-name>repeatTransactionNumber</param-name>
        <param-value>5</param-value>
    </context-param>

    <context-param>
        <param-name>incorrectLoginAttemptsLimit</param-name>
        <param-value>3</param-value>
    </context-param>

